#!/usr/bin/make -f

export PYBUILD_DISABLE_python2=1
export DH_VERBOSE=1
export PYBUILD_OPTION="-v"
export PYBUILD_DISABLE=configure

%:
	dh $@ --with python3

override_dh_auto_clean:
	rm -rf *.egg-info
	rm -rf build
	dh_clean

override_dh_auto_build:
	set -ex; for python in $(shell py3versions -r); do \
		$$python setup.py build; \
	done

override_dh_auto_install:
	set -ex; for python in $(shell py3versions -r); do \
		$$python setup.py install --root=$(CURDIR)/debian/fildem --install-layout=deb; \
	done

override_dh_python3:
	dh_python3 -O-buildsystem=pybuild --shebang=/usr/bin/python3 --verbose

override_dh_auto_test:
	@echo "No tests."
